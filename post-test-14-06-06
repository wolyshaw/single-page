window.onload=function(){
    var postImg=document.getElementById('article-post-img');
    var postImgSmall=postImg.getElementsByTagName('img');
        for(var i=0;i<postImgSmall.length;i++)
        {
            postImgSmall[i].onmouseover=function(){
                this.className = "current"
            };
            postImgSmall[i].onmouseout=function(){
                this.className = ""
            };
        }
};
